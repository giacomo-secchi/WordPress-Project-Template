{
	"version": 2,
	"customTemplates": [],
	"settings": {
		"appearanceTools": true,
        "layout": {
            "contentSize": "650px",
            "wideSize": "1100px"
        },
        "typography": {
			"customFontSize": true,
			"customLineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Open Sans\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", sans-serif",
					"slug": "open-sans",
					"name": "Open Sans",
					"google": "family=Open+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,500;1,600;1,700" 
				},
                {
					"fontFamily": "\"Lato\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", sans-serif",
					"slug": "lato",
					"name": "Lato",
					"google": "family=Lato:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,600;1,700"
				},
				{
					"fontFamily": "ui-sans-serif, -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", sans-serif",
					"slug": "system-sans-serif",
					"name": "System Sans Serif"
				},
				{
					"fontFamily": "ui-serif, \"Iowan Old Style\", \"Apple Garamond\", Baskerville, \"Times New Roman\", \"Droid Serif\", Times, \"Source Serif Pro\", serif",
					"slug": "system-serif",
					"name": "System Serif"
				},
				{
					"fontFamily": "ui-monospace, Menlo, Consolas, Monaco, \"Liberation Mono\", \"Lucida Console\", monospace",
					"slug": "system-monospace",
					"name": "System Monospace"
				}
			]
		}
    },
    "styles": {
        "blocks": {
			"core/button": {
				"border": {
					"radius": "100px"
				},
				"color": {
					"background": "var(--wp--preset--color--gray)",
					"text": "var(--wp--preset--color--white)"
				}
			},
			"core/quote": {
				"border": {
					"width": "3px"
				},
				"padding": {
					"top": "20px"
				}
			},
			"core/separator": {
				"border": {
					"width": "1px"
				}
			},
			"core/site-title": {
                "typography": {
					"fontFamily": "var(--wp--preset--font-family--lato)",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"fontStyle": "normal",
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			}
		},
		"elements": {
			"h1": {
				"color": {
					"text": "var(--wp--preset--color--blue)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--lato)"
				}
			},
			"h2": {
				"color": {
					"text": "var(--wp--preset--color--blue)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--lato)",
					"fontWeight": "700",
					"fontSize": "var(--wp--custom--typography--font-size--huge)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--lato)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--source-serif-pro)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--orange)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--lato)"
		}
	}
}